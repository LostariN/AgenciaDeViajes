extends ./layout/index

block contenido
    main.container.mt-5
        h1.text-center.mt-5.mb-5 #{pagina}

        blockquote.text-center Lee sobre nuestros clientes 
        include ./layout/bloque_testimonial
        .row 
            .col-md-12
                h2.d-block.text-center.w-100 Agrega un testimonial

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje
                       
                      

            .row.justify-content-center.col
                .col-md-8   
                    form(action="/testimoniales", method="post") 
                        .form-group 
                            label(for="nombre") Nombre
                            input#nombre(type="text", placeholder="tu nombre", name="nombre",class="form-control", value= nombre) 
                        .form-group 
                            label(for="correo") correo
                            input#correo(type="text", name="correo",placeholder="tu correo",class="form-control", value= correo) 
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(row=3, name="mensaje",placeholder="tu mensaje",class="form-control")=mensaje 
                        input.btn.btn-success.btn-block(type="submit", value="Enviar")
    